    <script>
        // Initialize all audio players with data-audio-player attribute
        document.addEventListener('DOMContentLoaded', function() {
            // Convert all standard audio elements to custom players
            document.querySelectorAll('audio:not([data-no-custom])').forEach(function(audioElement) {
                // Skip if already in a custom player
                if (audioElement.closest('.custom-audio-player')) return;
                
                // Create container for player
                const container = document.createElement('div');
                container.className = 'custom-audio-player-container';
                container.setAttribute('data-audio-player', '');
                container.setAttribute('data-title', audioElement.getAttribute('data-title') || 'Audio Track');
                
                // Replace audio element with container
                audioElement.parentNode.insertBefore(container, audioElement);
                
                // Create new instance with the original source
                const player = new BenixAudioPlayer({
                    containerElement: container,
                    audioSrc: audioElement.src,
                    title: audioElement.getAttribute('data-title') || 'Audio Track'
                });
                
                // Remove original audio element
                audioElement.remove();
            });
        });
    </script>
